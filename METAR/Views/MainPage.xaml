<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="METAR.Views.MainPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#0f1923">

    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="24,48,24,24">

            <!-- Header -->
            <Label Text="✈ METAR"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <Label Text="Aviation Weather Decoder"
                   FontSize="14"
                   TextColor="#7f8c8d"
                   HorizontalOptions="Center"
                   Margin="0,0,0,8" />

            <!-- Search Bar -->
            <Border Stroke="#2c3e50"
                    StrokeThickness="1"
                    BackgroundColor="#1a2634"
                    StrokeShape="RoundRectangle 12">
                <Grid ColumnDefinitions="*,Auto" Padding="4">
                    <Entry Grid.Column="0"
                           Placeholder="ICAO Code (e.g. EPWA)"
                           PlaceholderColor="#4a6278"
                           Text="{Binding IcaoCode, Mode=TwoWay}"
                           FontSize="18"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           ClearButtonVisibility="WhileEditing"
                           TextTransform="Uppercase"
                           ReturnCommand="{Binding FetchMetarCommand}"
                           Margin="8,0" />

                    <Button Grid.Column="1"
                            Text="Search"
                            Command="{Binding FetchMetarCommand}"
                            BackgroundColor="#2b5797"
                            TextColor="White"
                            CornerRadius="10"
                            Padding="16,10"
                            FontAttributes="Bold" />
                </Grid>
            </Border>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                               IsVisible="{Binding IsLoading}"
                               Color="#2b5797"
                               HeightRequest="40" />

            <!-- Error Message -->
            <Border IsVisible="{Binding HasError}"
                    BackgroundColor="#2c1215"
                    Stroke="#e74c3c"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Padding="16">
                <Label Text="{Binding ErrorMessage}"
                       TextColor="#e74c3c"
                       FontSize="14"
                       HorizontalTextAlignment="Center" />
            </Border>

            <!-- Results -->
            <VerticalStackLayout IsVisible="{Binding HasResult}" Spacing="12">

                <!-- Flight Category Badge -->
                <Border BackgroundColor="{Binding FlightCategoryColor}"
                        StrokeShape="RoundRectangle 10"
                        Padding="0,10"
                        HorizontalOptions="Center"
                        WidthRequest="120">
                    <Label Text="{Binding FlightCategory}"
                           TextColor="White"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                </Border>

                <!-- Raw METAR -->
                <Border BackgroundColor="#1a2634"
                        Stroke="#2c3e50"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12"
                        Padding="16">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="RAW METAR"
                               TextColor="#7f8c8d"
                               FontSize="11"
                               FontAttributes="Bold"
                               CharacterSpacing="1" />
                        <Label Text="{Binding RawText}"
                               TextColor="#ecf0f1"
                               FontSize="13"
                               FontFamily="OpenSansRegular" />
                    </VerticalStackLayout>
                </Border>

                <!-- Data Grid -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="12">

                    <!-- Wind -->
                    <Border Grid.Row="0" Grid.Column="0"
                            BackgroundColor="#1a2634"
                            Stroke="#2c3e50"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 12"
                            Padding="14">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="💨 WIND" TextColor="#7f8c8d" FontSize="11" FontAttributes="Bold" CharacterSpacing="1" />
                            <Label Text="{Binding Wind}" TextColor="White" FontSize="13" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Visibility -->
                    <Border Grid.Row="0" Grid.Column="1"
                            BackgroundColor="#1a2634"
                            Stroke="#2c3e50"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 12"
                            Padding="14">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="👁 VISIBILITY" TextColor="#7f8c8d" FontSize="11" FontAttributes="Bold" CharacterSpacing="1" />
                            <Label Text="{Binding Visibility}" TextColor="White" FontSize="13" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Temperature -->
                    <Border Grid.Row="1" Grid.Column="0"
                            BackgroundColor="#1a2634"
                            Stroke="#2c3e50"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 12"
                            Padding="14">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="🌡 TEMP" TextColor="#7f8c8d" FontSize="11" FontAttributes="Bold" CharacterSpacing="1" />
                            <Label Text="{Binding Temperature}" TextColor="White" FontSize="13" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Pressure -->
                    <Border Grid.Row="1" Grid.Column="1"
                            BackgroundColor="#1a2634"
                            Stroke="#2c3e50"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 12"
                            Padding="14">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="⬇ PRESSURE" TextColor="#7f8c8d" FontSize="11" FontAttributes="Bold" CharacterSpacing="1" />
                            <Label Text="{Binding Pressure}" TextColor="White" FontSize="13" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Clouds -->
                    <Border Grid.Row="2" Grid.Column="0"
                            BackgroundColor="#1a2634"
                            Stroke="#2c3e50"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 12"
                            Padding="14">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="☁ CLOUDS" TextColor="#7f8c8d" FontSize="11" FontAttributes="Bold" CharacterSpacing="1" />
                            <Label Text="{Binding Clouds}" TextColor="White" FontSize="13" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Humidity -->
                    <Border Grid.Row="2" Grid.Column="1"
                            BackgroundColor="#1a2634"
                            Stroke="#2c3e50"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 12"
                            Padding="14">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="💧 HUMIDITY" TextColor="#7f8c8d" FontSize="11" FontAttributes="Bold" CharacterSpacing="1" />
                            <Label Text="{Binding Humidity}" TextColor="White" FontSize="13" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Observed -->
                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                            BackgroundColor="#1a2634"
                            Stroke="#2c3e50"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 12"
                            Padding="14">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="🕒 OBSERVED" TextColor="#7f8c8d" FontSize="11" FontAttributes="Bold" CharacterSpacing="1" />
                            <Label Text="{Binding Observed}" TextColor="White" FontSize="13" />
                        </VerticalStackLayout>
                    </Border>

                </Grid>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
